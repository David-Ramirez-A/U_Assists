<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lines"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".cambioExitoso">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="214sp"
        android:layout_height="65sp"
        android:layout_marginTop="45sp"
        app:srcCompat="@drawable/marca" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="326dp"
        android:layout_height="166dp"
        android:layout_margin="45sp"
        android:layout_marginStart="0sp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/quicksand_medium"
        android:text="@string/te_has_cambiado_tu_contrase_a_con_xito"
        android:textColor="#2E4369"
        android:textSize="40sp"
        tools:ignore="TextSizeCheck" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="0dp"
            android:text="@string/ve_al"
            android:textColor="#2E4369"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVolverCambioExito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:background="@color/cardview_shadow_end_color"
            android:text="@string/inicio"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFF26C4F"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>