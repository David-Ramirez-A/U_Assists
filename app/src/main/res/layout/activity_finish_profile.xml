<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lines"
    android:orientation="vertical"
    android:padding="18sp"
    tools:context=".teacher_selected">

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="77dp"
            android:layout_height="86dp"
            android:layout_marginRight="36sp"
            android:backgroundTint="#00FFFFFF"
            android:contentDescription="@string/boton_de_volver"
            android:scaleType="fitCenter"
            android:src="@drawable/angle_left"
            tools:ignore="ImageContrastCheck" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:contentDescription="@string/imagen_de_perfil"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/circle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageProfile"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/circle_user"
                android:visibility="visible"
                app:shapeAppearanceOverlay="@style/roundProfileImage" />
        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="320sp"
        android:layout_height="628dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="TextSizeCheck,VisualLintBounds">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="center"
            android:text="@string/profile_title"
            android:textColor="#1B325F"
            android:textSize="38sp" />

        <EditText
            android:id="@+id/txtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/quicksand_medium"
            android:hint="@string/hint_phone"
            android:inputType="phone"
            android:minHeight="48dp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/titulo_carrera"
                android:textColor="#1B325F"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_carrera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/titulo_genero"
                android:textColor="#1B325F"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/titulo_provincia"
                android:textColor="#1B325F"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_provincia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/titulo_canton"
                android:textColor="#1B325F"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_canton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_medium"
                android:text="@string/titulo_distrito"
                android:textColor="#1B325F"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/spinner_distrito"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnFinish"
            android:layout_width="168dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#3A89C9"
            android:fontFamily="@font/quicksand_medium"
            android:text="@string/finish_buttom"
            android:textSize="24sp"
            app:cornerRadius="8dp" />

    </LinearLayout>


</LinearLayout>