<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <!--La parte de arriba configura la forma en la que se va a presentar el Layout-->
    <LinearLayout
        android:id="@+id/llResena"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape"
        android:orientation="horizontal"
        android:padding="4sp">

        <TextView
            android:id="@+id/nombreReviewer"
            android:layout_width="101dp"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/usuario_que_hacer_el_review"
            android:textSize="10dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="143dp"
            android:layout_height="93dp"
            android:layout_weight="0"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:text="@string/feedback"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/grade"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:fontFamily="@font/quicksand_medium"
            android:paddingStart="5dp"
            android:text="@string/calificacion_asisgnada" />
    </LinearLayout>
</androidx.cardview.widget.CardView>